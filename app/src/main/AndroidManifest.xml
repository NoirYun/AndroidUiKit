                <action android:name="android.intent.action.MAIN" />
                <category android:name="io.jiantao.android.sample.cagegory" />
            </intent-filter>
        </activity>


        <activity android:name=".common.SimpleFragmentActivity"
            android:label="common/simpleFragmentActivity"
